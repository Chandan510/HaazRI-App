<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ligthtodarkbackground"
    tools:context=".fragments.fragment_create_member">

    <View
        android:id="@+id/addmemberlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/addmemberlogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/addmemberheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_member"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/addmemberlogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/linearusername01"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedittextbackground"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addmemberheading">

        <View
            android:id="@+id/personlogoview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_person_outline_24"
            android:layout_marginStart="15dp"
            />
        <EditText
            android:id="@+id/edttnameText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/name"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearusername02"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedittextbackground"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearusername01">


    <View
        android:id="@+id/mobileview"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_phone_iphone_24"
        android:layout_marginStart="15dp"
        />

    <EditText
        android:id="@+id/mobileedttext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="@string/mobile"
        android:textColorHint="@color/black"
        android:inputType="phone"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/divider02"
        android:background="@null"
        android:layout_marginStart="20dp"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/addmemberbtn"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearusername02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/loginbuttonbackground"
        android:text="@string/add"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>